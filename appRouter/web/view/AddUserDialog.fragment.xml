<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="addUserDialog"
      title="Add User">
   		<Label text="Name" labelFor="inputName"/>
			<Input
				id="inputName"
				placeholder="Name"
				value="" />
		<Label text="Age" labelFor="inputAge"/>
			<Input
				id="inputAge"
				placeholder="Age"
				type="Number"
				value="" />
   		<beginButton>
        	<Button
	            text="Save"
	            press="onCloseDialog"/>
    	</beginButton>
   </Dialog>
</core:FragmentDefinition>